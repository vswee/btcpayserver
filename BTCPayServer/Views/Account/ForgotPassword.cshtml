@model ForgotPasswordViewModel
@{
    Layout = "_SingleForms";
    ViewData["Title"] = "Forgot your password?";
}


                                <form id="loginForm_" asp-route-returnurl="@ViewData[" ReturnUrl"]" method="post">
                                    <span class="form-name">@ViewData["Title"]</span>
                                    <div class="f-el">
                                        <p>
                                            Enter the email address for your account and we'll help you reset your password.
                                        </p>
                                    </div>
                                    <div class="f-el">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <span class="form-lab">email</span>
                                        <input asp-for="Email" class="form-input" placeholder="" required="required" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="f-el">
                                        <button type="submit" class="fp-button" >Submit</button>
                                    </div>
                                </form>

                            

    @await Html.PartialAsync("_ValidationScriptsPartial")
